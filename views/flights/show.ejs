<%- include('../partials/header') %>
<br>
  <h2>Departing From</h2>
  <section id="show-page">
    <div>Airline: </div>
    <div>
      <%= flight.airline %>
    </div>
    <div>Airport: </div>
    <div>
      <%= flight.airport %>
    </div>
    <div>Flight Number: </div>
    <div>
      <%= flight.flightNo %>
    </div>
    <div>Departure Time: </div>

  </section>

<form id="add-review-form" method="POST"
action="/flights/<%= flight._id %>/destinations">
<label>Destination:</label>
<input type="text" name="airport">
<label>Arival Time:</label>
<input type="datetime-local" name="arrival">
<input type="submit" value="Add Destination">
</form>

<h2>Tickets</h2>
<% if (tickets.length) { %>
  <table>
     <thead>
         <tr>
             <th>Seat</th>
             <th>Price</th>
         </tr>
     </thead>
     <tbody>
         <% tickets.forEach(function(t) { %>
             <tr>
                 <td><%= t.seat %></td>
                 <td><%= t.price %></td>
             </tr>
         <% }) %>
     </tbody>
  </table>
<% } else { %>
    <h5>No Tickets Yet</h5>
<% } %>
<a href="/flights/<%= flight._id %>/tickets/new"><button>New Ticket</button></a>

<% if (flight.destinations.length) { %>
 <table>
    <thead>
        <tr>
            <th>Airport</th>
            <th>Arrival</th>
        </tr>
    </thead>
    <tbody>
        <% flight.destinations.forEach(function(d) { %>
            <tr>
                <td><%= d.airport %></td>
                <td><%= d.arrival.toLocaleDateString() %><%= d.arrival.toLocaleTimeString().replace(':00', '') %></td>
            </tr>
        <% }) %>
    </tbody>
 </table>
<% } %>

<%- include('../partials/footer') %>